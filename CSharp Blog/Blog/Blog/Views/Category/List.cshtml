@model List<Blog.Models.Category>

@{
    ViewBag.Title = "Списък";
}

<div class="container">
    <div class="well">
        <h2>Списък категории</h2>
        
            <table class="table table-striped table-hover col-sm-12">
                <thead>
                    <tr>
                        <th>#</th>
                        <th>Категория</th>
                        <th class="text-right">Действие</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var category in Model)
                    {
                        <tr>
                            <td>@category.Id</td>
                            <td>@category.Name</td>
                            <td class="text-right">
                                @Html.ActionLink("Редактирай", "Edit", "Category", new { @id = category.Id }, null)
                                @Html.ActionLink("Изтрий", "Delete", "Category", new { @id = category.Id }, null)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        
        @Html.ActionLink("Нова категория", "Create", "Category", null, new { @class = "btn btn-primary" })
    </div>
</div>
