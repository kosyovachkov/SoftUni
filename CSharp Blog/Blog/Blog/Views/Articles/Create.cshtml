@model Blog.Models.ArticleViewModel

@{
    ViewBag.Title = "Нова статия";
}

<div class="container">
    <div class="well">

        <h2>Създай нова статия</h2>


        @using (Html.BeginForm("Create", "Articles", FormMethod.Post, new {enctype = "multipart/form-data", @class = "form-horizontal"}))
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.LabelFor(model => model.Title, htmlAttributes: new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.EditorFor(model => model.Title, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Title, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.Content, htmlAttributes: new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.EditorFor(model => model.Content, new { htmlAttributes = new { @class = "form-control", @rows = "10" } })
                        @Html.ValidationMessageFor(model => model.Content, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.Label("image", "Снимка", htmlAttributes: new { @class = "control-label col-sm-4" })
                    <div class="col-sm-4">
                        @Html.TextBox("image", null,  new {type="file", @class = "form-control", @rows = "10"})
                        @Html.ValidationMessageFor(model => model.Image, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.CategoryId, new { @class = "col-sm-4 control-label" })
                    <div class="dropdown col-sm-4">
                        @Html.DropDownListFor(model => model.CategoryId, new SelectList(Model.Categories, "Id", "Name"), new { @class = "btn btn-info col-sm-12" })
                    </div>
                </div>



                <div class="form-group">
                    <div class="col-md-offset-4 col-sm-4">
                        <input type="submit" value="Създай" class="btn btn-success" />
                        <input type="reset" value="Изчисти" class="btn btn-default"/>
                        
                    </div>
                </div>
            </div>
        }
    </div>
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
