@using Blog.Models;
@using Blog.Classes;
@model IEnumerable<Article>


@{
    ViewBag.Title = "Index";
}

<h2>Списък на всички статии</h2>

<hr>
<table class="table table-striped tab-content table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Author)
        </th>
        <th>Действия</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Utils.CutArticle(item.Content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                @if (item.Author != null)
                {
                    @item.Author.FullName;
                }
                else
                {
                    @:<i>(няма автор)</i>
                }

            </td>
            <td>
                @Html.ActionLink("Детайли", "Details", new { id = item.Id }) |
                @if (User.Identity.Name.Equals(item.Author.UserName) || User.IsInRole("Administrators"))
                {
                    @Html.ActionLink("Редактирай", "Edit", new { id = item.Id });
                    @:|
                    @Html.ActionLink("Изтрий", "Delete", new { id = item.Id })
                }

            </td>
        </tr>
    }

</table>